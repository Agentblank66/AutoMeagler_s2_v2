@page
@model AutoMeagler_s2_v2.Pages.Order.CreateOrderSaleModel
@{
}

<h1 class="text-black"> Opret Salgs Ordre </h1>

<form method="form-group">
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Id" class="control-label"></label>
        <input asp-for="@Model.OrderSale.Id" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Car.Id" class="control-label">Car ID</label>
        <input asp-for="@Model.OrderSale.Car.Id" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.Car.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Employee.Id" class="control-label">Employee ID</label>
        <input asp-for="@Model.OrderSale.Employee.Id" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.Employee.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Customer.Id" class="control-label">Customer ID</label>
        <input asp-for="@Model.OrderSale.Customer.Id" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.Customer.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Type" class="control-label"></label>
        <input asp-for="@Model.OrderSale.Type" class="form-control"/>
        <span asp-validation-for="@Model.OrderSale.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.SalePrice" class="control-label"></label>
        <input asp-for="@Model.OrderSale.SalePrice" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.SalePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Year" class="control-label"></label>
        <input asp-for="@Model.OrderSale.Year" class="form-control" type="date" />
        <span asp-validation-for="@Model.OrderSale.Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Month" class="control-label"></label>
        <input asp-for="@Model.OrderSale.Month" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.Month" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.OrderSale.Day" class="control-label"></label>
        <input asp-for="@Model.OrderSale.Day" class="form-control" />
        <span asp-validation-for="@Model.OrderSale.Day" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Opret Salgs Ordre</button>
</form>