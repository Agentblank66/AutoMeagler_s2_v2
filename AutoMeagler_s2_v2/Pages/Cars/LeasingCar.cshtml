@page
@model AutoMeagler_s2_v2.Pages.Cars.LeaseModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Leasing af Biler</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0px;
            background-color: #f7f7f7;
        }

        h1 {
            text-align: center;
        }

        .leasing-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .leasing-box {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 20px;
        }

            .leasing-box h2 {
                margin-top: 0;
            }

            .leasing-box p {
                margin: 5px 0;
            }
    </style>
</head>
<body>
    <h1>Leasingtilbud</h1>

    <div class="leasing-container">
        @foreach (var car in Model.Cars)
        {
            <div class="leasing-box" style="cursor: pointer;" onclick="window.location='@Url.Page("/Cars/Car", new { id = car.Id })'">
                <h2>@car.Brand @car.Model</h2>
                <p><strong>Pris pr. måned:</strong></p>
                <p><strong>Leasingperiode:</strong></p>
                <p><strong>Årgang:</strong></p>
                <p><strong>Km inkluderet:</strong></p>
            </div>
        }
    </div>
</body>
</html>
