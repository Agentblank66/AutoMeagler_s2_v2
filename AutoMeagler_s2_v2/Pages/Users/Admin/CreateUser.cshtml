@page
@model AutoMeagler_s2_v2.Pages.Admin.CreateUserModel
@{
}

<h1 class="text-white">Opret Ny Bruger</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-page-handler="Select">
            <div class="form-group">
                <label asp-for="UserType" class="text-white">Brugertype</label>
                <select asp-for="UserType" asp-items="Html.GetEnumSelectList<Models.User.UserType>()" class="form-control">
                    <option value="">– Vælg type –</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-secondary">Vis felter</button>
        </form>

        
            <hr class="bg-white" />
            <form method="post">
            @if (Model.UserType == AutoMeagler_s2_v2.Models.User.UserType.Customer
            || Model.UserType == AutoMeagler_s2_v2.Models.User.UserType.Employee)
            {
                <div class="form-group">
                    <label asp-for="Id" class="control-label text-white">Id</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label text-white">Fornavn</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label text-white">Efternavn</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label text-white">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label text-white">Adgangskode</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @if (Model.UserType == AutoMeagler_s2_v2.Models.User.UserType.Customer)
                {
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label text-white">Telefonnummer</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group form-check text-white">
                    <input asp-for="WishToSell" class="form-check-input" />
                    <label asp-for="WishToSell" class="form-check-label">Ønsker at sælge?</label>
                    <span asp-validation-for="WishToSell" class="text-danger"></span>
                </div>
                }
                else if (Model.UserType == AutoMeagler_s2_v2.Models.User.UserType.Employee)
                {
                    <div class="form-group">
                        <label asp-for="Type" class="control-label text-white">Medarbejder type</label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                }
              
            }
            <button type="submit" class="btn btn-primary mt-3">Opret bruger</button>
            </form>
    </div>
</div>
<div style="height: 200px;"></div>

<div class="form-group">
    <label asp-for="FirstName" class="control-label text-white">Fornavn</label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName" class="control-label text-white">Efternavn</label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="control-label text-white">Email</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Password" class="control-label text-white">Adgangskode</label>
    <input asp-for="Password" type="password" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>
</div>
@if (Model.UserType == AutoMeagler_s2_v2.Models.User.UserType.Customer)
{
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label text-white">Telefonnummer</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group form-check text-white">
        <input asp-for="WishToSell" class="form-check-input" />
        <label asp-for="WishToSell" class="form-check-label">Ønsker at sælge?</label>
        <span asp-validation-for="WishToSell" class="text-danger"></span>
    </div>
}
else if (Model.UserType == AutoMeagler_s2_v2.Models.User.UserType.Employee)
{
    <div class="form-group">
        <label asp-for="Type" class="control-label text-white">Medarbejder type</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
}