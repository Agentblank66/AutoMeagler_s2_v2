@page
@model AutoMeagler_s2_v2.Pages.Users.EditEmployeeModel
@{
}

<form method="post">
    <input type="hidden" asp-for="Employee.Password" />
    <div class="form-group text-black">
        <label asp-for="Employee.Id" class="control-label text-black"></label>
        <input asp-for="Employee.Id" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group text-black">
        <label asp-for="Employee.FirstName" class="control-label text-black"></label>
        <input asp-for="Employee.FirstName" class="form-control" />
        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group text-black">
        <label asp-for="Employee.LastName" class="control-label text-black"></label>
        <input asp-for="Employee.LastName" class="form-control" />
        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
    </div>
    <div class="form-group text-black">
        <label asp-for="Employee.Email" class="control-label text-black"></label>
        <input asp-for="Employee.Email" class="form-control" />
        <span asp-validation-for="Employee.Email" class="text-danger"></span>
    </div>
    <div class="form-group text-black">
        <label asp-for="Employee.Type" class="control-label text-black"></label>
        <input asp-for="Employee.Type" class="form-control" />
        <span asp-validation-for="Employee.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Opdater" class="btn btn-primary" />
    </div>
</form>
