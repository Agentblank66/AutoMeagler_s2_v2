@page
@model AutoMeagler_s2_v2.Pages.Users.EditCustomerModel
@{
}

<form method="post">
    <input type="hidden" asp-for="Customer.Password" />
    <div class="form-group text-white">
        <label asp-for="Customer.Id" class="control-label text-black"></label>
        <input asp-for="Customer.Id" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group text-white">
        <label asp-for="Customer.FirstName" class="control-label text-black"></label>
        <input asp-for="Customer.FirstName" class="form-control" />
        <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group text-white">
        <label asp-for="Customer.LastName" class="control-label text-black"></label>
        <input asp-for="Customer.LastName" class="form-control" />
        <span asp-validation-for="Customer.LastName" class="text-danger"></span>
    </div>
    <div class="form-group text-white">
        <label asp-for="Customer.Email" class="control-label text-black"></label>
        <input asp-for="Customer.Email" class="form-control" />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>
    <div class="form-group text-white">
         <label asp-for="Customer.PhoneNumber" class="control-label text-black"></label>
         <input asp-for="Customer.PhoneNumber" class="form-control" />
         <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Opdater" class="btn btn-primary" />
    </div>
</form>
